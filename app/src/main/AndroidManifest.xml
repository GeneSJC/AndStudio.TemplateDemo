<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.demo.app4"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.DrawerMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity
            android:name=".activity.StoryBookActivity"
            android:label="Story Book">
        </activity>
        <activity
            android:name=".activity.DrawableDragDropActivity"
            android:label="DrawableDragDropActivity">
        </activity>
        <activity
            android:name=".activity.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".activity.TabbedActionBarActivity"
            android:label="@string/title_activity_tabbed_action_bar"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
